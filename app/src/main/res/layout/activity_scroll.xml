<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scroll">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="348dp"
        android:layout_height="629dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/paisajeConSol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="seleccionar"
                android:src="@mipmap/img5" />

            <ImageButton
                android:id="@+id/paisajeAzul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="seleccionar"
                android:src="@mipmap/img4" />

            <ImageButton
                android:id="@+id/paisajeVerde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="seleccionar"
                android:src="@mipmap/img2" />

            <ImageButton
                android:id="@+id/paisajeRojo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="seleccionar"
                android:src="@mipmap/img1" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>